<div class="container"> 
  <div class="jumbotron"> 
    <img src="/assets/img/burger.png"> 
    <h2> Eat-Da-Burger! </h2>
  </div>

   <div class="col-md-10 col-md-offset-1">
    <p class="lead"><strong> Enter the name of the burger you want to eat &amp; click the submit button.</strong></p>

    {{!-- section to add burgers --}}
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <textarea class="form-control input-lg" type="text" name="burger_name" rows="2"> </textarea>
      </div>

      <button class="btn btn-success btn-lg" type="submit">Add Burger!</button>
      <br>
      <br>
    </form>
  </div>

  {{!-- burger list before being eaten --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <div class="panel-panel default">
        <ul class="list-group">
        {{#each burgers}}
          {{#unless this.devoured}}
          <li class="list-group-item">
            <div class="input-group">
              <h4 class="burgerNames">{{this.burger_name}} </h4>
              <span class="input-group-btn">
                <form action="burgers/update/?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value={{this.id}}>
                  <button class="btn btn-warning btn-sm" name="devoured" type="submit"> DEVOUR IT! </button>
                </form>
              </span>
            </div>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>


    {{!-- burger list after being eaten --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="panel-panel default">
        {{#each burgers}}
          {{#if this.devoured}}
            <input class="form-control burgerNames" type="text" placeholder="{{this.burger_name}}">
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>

 
</div>